<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#150618"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">
        <Button
            android:layout_width="50dp"
            android:id="@+id/tv_back"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_height="50dp" />
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_pack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.26">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_height="170dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/iv_avatar"
                    android:layout_height="120dp" />
                <TextView
                    android:id="@+id/tv_coach"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Lại Văn Hiếu"
                    android:layout_below="@id/iv_avatar"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/v_color"
                android:layout_marginEnd="10dp"
                android:background="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/iv_pack_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_pack_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toRightOf="@id/v_color"
                />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian dự kiến"
                android:layout_below="@id/tv_pack_name"
                android:layout_toRightOf="@id/v_color"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_goal"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/v_color"
                android:layout_below="@id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mục tiêu"/>

            <TextView
                android:id="@+id/tv_cost"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/v_color"
                android:layout_below="@id/tv_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá"/>

            <android.support.v7.widget.AppCompatRatingBar
                android:layout_toRightOf="@id/v_color"
                style="?android:attr/ratingBarStyleIndicator"
                android:numStars="5"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_pack_rating"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:padding="16dp"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <Button
            android:background="@color/colorPrimary"
            android:id="@+id/bt_register_pack"
            android:layout_width="150dp"
            android:text="Đăng Ký"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
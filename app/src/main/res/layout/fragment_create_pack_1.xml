<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:orientation="vertical"
    tools:context="com.example.hihihahahehe.portablept.fragments.CreatePackFragment">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Thêm gói tập"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_add_image"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_image_add_button"/>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_pack_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên gói tập :"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:paddingStart="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Lịch Tập :"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/cb_T2"
                android:text="T2"/>
            <CheckBox
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/cb_T3"
                android:text="T3"/>
            <CheckBox
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/cb_T4"
                android:text="T4"/>
            <CheckBox
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/cb_T5"
                android:text="T5"/>
            <CheckBox
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/cb_T6"
                android:text="T6"/>
            <CheckBox
                android:layout_width="60dp"
                android:id="@+id/cb_T7"
                android:layout_height="30dp"
                android:text="T7"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_duration_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền :"
            android:textStyle="bold" />

        <EditText
            android:maxLength="15"
            android:textAlignment="center"
            android:id="@+id/edt_pack_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/view"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/bt_cancel"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view"
            android:background="@color/week"
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textAlignment="center"/>
    </RelativeLayout>
</LinearLayout>
